# --- Strava Training Calendar (from Raspberry Pi) ---

[[strava]]
path = ~/.local/share/calendars/strava/
type = calendar
color = light red
readonly = true

[locale]
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M

[view]
theme = dark

[palette]
# Format: fg, bg, mono, fg_high, bg_high
